<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="210dp"
        android:src="@drawable/check2"
        android:layout_margin="0dp"/>

    <LinearLayout android:id="@+id/card_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView android:id="@+id/location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAL 101"
            android:textSize="15dp"
            android:padding="5dp"
            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-thin"/>

        <TextView android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00-10:50"
            android:textSize="32sp"
            android:fontFamily="sans-serif-light"
            android:padding="5dp"
            android:drawablePadding="10dp"/>

        <TextView android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MWF"
            android:textSize="24sp"
            android:fontFamily="sans-serif-thin"
            android:padding="5dp"
            android:drawablePadding="10dp"/>

        <TextView android:id="@+id/teacher_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Redekopp, Mark"
            android:padding="5dp"
            android:textSize="18sp"
            android:fontFamily="sans-serif-thin"
            android:drawablePadding="10dp"/>

    </LinearLayout>

</LinearLayout>