<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <item name="colorPrimary">@color/cardinal</item>
        <item name="colorPrimaryDark">@color/cardinal_dark</item>
        <item name="colorAccent">@color/gold</item>

        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="android:textColor">@color/text_dark</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@color/cardinal</item>
        <item name="background">@color/cardinal</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>

</resources>
